<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <%= image_tag 'logo.png', class: 'img-responsive' %>
      <h2>Changer mon mot de passe</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <% if !resource.errors.empty? %>
          <div class="row bg-danger">
            <div class="col-md-12 text-center">
              <%= devise_error_messages! %>
            </div>
          </div>
        <% end %>

        <%= f.hidden_field :reset_password_token, value: params[:reset_password_token] %>

        <div class="form-group">
          <%= f.label :password,  t('.new_password', :default => 'New password') %>
          <%= f.password_field :password, class: "form-control", placeholder: "8 caractères minimum", autofocus: true, autocomplete: "off" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, t('.confirm_new_password', :default => 'Confirm new password') %>
          <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Les mots de passe doivent être identiques", autocomplete: "off" %>
        </div>

         <div class="form-group">
          <%= f.submit t('.change_my_password', :default => 'Change my password') %>
        </div>
      <% end %>
    </div>
  </div>
</div>
