<p id="notice"><%= notice %></p>

<h1>Listing Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Validation code</th>
      <th>Total</th>
      <th>Commission</th>
      <th>Payin</th>
      <th>Availability</th>
      <th>Delivery request</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.status %></td>
        <td><%= delivery.validation_code %></td>
        <td><%= delivery.total %></td>
        <td><%= delivery.commission %></td>
        <td><%= delivery.payin_id %></td>
        <td><%= delivery.availability_id %></td>
        <td><%= delivery.delivery_request_id %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

